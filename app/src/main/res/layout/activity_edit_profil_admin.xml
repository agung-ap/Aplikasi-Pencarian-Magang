<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context=".EditProfilUser">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_preview_admin"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:padding="16dp"
            android:src="@drawable/background_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/icon_camera"
            app:layout_constraintBottom_toTopOf="@+id/nama"
            app:layout_constraintEnd_toEndOf="@+id/image_preview_admin"
            app:layout_constraintStart_toStartOf="@+id/image_preview_admin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.773"
            app:layout_constraintVertical_bias="0.961" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/image_preview_admin"
            app:layout_constraintLeft_toLeftOf="@+id/image_preview_admin"
            app:layout_constraintRight_toRightOf="@+id/image_preview_admin"/>

        <EditText
            android:id="@+id/nama_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nama"
            app:layout_constraintLeft_toLeftOf="@+id/nama"
            app:layout_constraintRight_toRightOf="@+id/nama"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nama_admin"
            app:layout_constraintLeft_toLeftOf="@+id/nama_admin"
            app:layout_constraintRight_toRightOf="@+id/nama_admin"/>

        <EditText
            android:visibility="gone"
            android:id="@+id/email_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email"
            app:layout_constraintLeft_toLeftOf="@+id/email"
            app:layout_constraintRight_toRightOf="@+id/email"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_admin"
            app:layout_constraintLeft_toLeftOf="@+id/email_admin"
            app:layout_constraintRight_toRightOf="@+id/email_admin"/>

        <EditText
            android:visibility="gone"
            android:id="@+id/password_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintLeft_toLeftOf="@+id/password"
            app:layout_constraintRight_toRightOf="@+id/password"/>

        <TextView
            android:id="@+id/telp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. Telp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_admin"
            app:layout_constraintLeft_toLeftOf="@+id/password_admin"
            app:layout_constraintRight_toRightOf="@+id/password_admin"/>

        <EditText
            android:id="@+id/telp_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/telp"
            app:layout_constraintLeft_toLeftOf="@+id/telp"
            app:layout_constraintRight_toRightOf="@+id/telp"/>

        <TextView
            android:id="@+id/alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/telp_admin"
            app:layout_constraintLeft_toLeftOf="@+id/telp_admin"
            app:layout_constraintRight_toRightOf="@+id/telp_admin"/>

        <EditText
            android:id="@+id/address_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/alamat"
            app:layout_constraintLeft_toLeftOf="@+id/alamat"
            app:layout_constraintRight_toRightOf="@+id/alamat"/>

        <Button
            android:id="@+id/save_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_grey_900"
            android:text="Save"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/address_admin"
            app:layout_constraintLeft_toLeftOf="@+id/address_admin"
            app:layout_constraintRight_toRightOf="@+id/address_admin"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>

