<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MagangDetailAdminActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context=".MagangDetailAdminActivity">

            <TextView
                android:id="@+id/title_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="25sp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/md_black_1000"
                android:text="Title"/>

            <TextView
                android:id="@+id/company_name_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="18sp"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:text="Company Name"/>

            <TextView
                android:id="@+id/city_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="18sp"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:text="City Name"/>

            <TextView
                android:id="@+id/salary_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="20sp"
                android:textColor="@color/md_grey_900"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:text="Salary"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/requirement_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/md_grey_900"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:text="@string/requirement"/>
            </ScrollView>

        </LinearLayout>
    <Button
        android:id="@+id/apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/md_white_1000"
        android:text="Apply"/>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/isApply_validation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" />
</LinearLayout>
