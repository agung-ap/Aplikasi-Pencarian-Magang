<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/md_yellow_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textColor="@color/md_black_1000"
                android:maxLength="50"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/company_name_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:maxLength="50"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/city_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:maxLength="50"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/salary_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="salary per bulan"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/md_blue_grey_900"
                android:maxLength="100"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/requirement_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/requirement"
                android:ellipsize="end"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:maxLength="200"
                android:textColor="@color/md_blue_grey_900"
                android:textSize="12sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
